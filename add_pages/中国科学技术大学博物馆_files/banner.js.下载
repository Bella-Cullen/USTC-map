$(function() {
    var winheight = $(window).height();
    $(".cb-slideshowbox").height(winheight);

    function slideimg() {

        if (activeimg == (licount - 1)) {
            activeimg = -1;
        }
        $(".cb-slideshow li").removeClass("active fade");

        $(".slide-icon li").removeClass("active");
        $(".cb-slideshow li:eq(" + (activeimg + 1) + ")").addClass("active");
        $(".slide-icon li:eq(" + (activeimg + 1) + ")").addClass("active");
        if (activeimg == -1) {
            fadeimg = licount - 1;
        } else {
            fadeimg = activeimg;
        }
        $(".cb-slideshow li:eq(" + fadeimg + ")").addClass("fade");
        activeimg = $(".cb-slideshow li.active").index();

        $(".cb-slideshow li #titleimg").removeClass().removeAttr("style");
        $(".cb-slideshow li:eq(" + activeimg + ")  #titleimg").addClass("titleimg wow titleimgfadeIn");

        if (activeimg == (licount - 1)) {
            activeimg = -1;
        }
        //console.log(activeimg + ",fadeimg=" + fadeimg);

    }
    var activeimg = 0,
        fadeimg = 0;
    if ($('.cb-slideshow li').length == 1) {
        $('.slide-icon').hide();
        $('.cb-slideshow li span').css({
            'animation': 'none',
            'opacity': '1'
        });
    } else {
        var time = setInterval(function() {
            slideimg();
        }, 12000);
    }

    var licount = $(".cb-slideshow li").length;

    $(".slide-icon li").click(function() {
        if ($(this).hasClass("active")) {
            return;
        }

        clearInterval(time);
        fadeimg = $(".cb-slideshow li.active").index();
        activeimg = $(this).index();

        $(".cb-slideshow li").removeClass("active fade");
        $(".slide-icon li").removeClass("active");
        $(".cb-slideshow li:eq(" + activeimg + ")").addClass("active");
        $(".slide-icon li:eq(" + activeimg + ")").addClass("active");
        $(".cb-slideshow li:eq(" + fadeimg + ")").addClass("fade");

        $(".cb-slideshow li #titleimg").removeClass().removeAttr("style");
        $(".cb-slideshow li:eq(" + activeimg + ")  #titleimg").addClass("titleimg wow titleimgfadeIn");

        activeimg = $(".cb-slideshow li.active").index();
        time = setInterval(function() {
            slideimg();
        }, 12000);
    });
});