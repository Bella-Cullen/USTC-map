    <image class="bicycle" src="{{bicycle_icon}}" bindtap="bicycle"></image>
    <image class="bus" src="{{bus_icon}}" bindtap="bus"></image>
  </view>
  <view class="traffic_content_text">
    <view class="gate_text" bindtap="gate">校门</view>
    <view class="bicycle_text" bindtap="bicycle">共享单车</view>
    <view class="bus_text" bindtap="bus">校车</view>
  </view>
</view>

