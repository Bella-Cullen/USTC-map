<view class="select_top">
  <image class="select_left" src="{{select_left}}"></image>
  <view class="select_title">校区选择</view>
  <input class="select_input" disabled="true" placeholder="请选择要搜索的校区" bindtap="select_show" value="{{select_value}}"></input>
  <image class="select_right" src="{{select_right}}" bindtap="select_show"></image>
</view>

<view class="select_result" hidden="{{select_hidden}}">
  <view class="result" wx:for="{{select_array}}" wx:key="index" bindtap="getSelectValue" data-postname="{{item}}">
    <view>{{item}}</view>
  </view>
</view>

<view class="food">
  <view class="food_top">
    <image class="food_icon" src="{{food_icon}}"></image>
    <view class="food_title">美食</view>
  </view>
  <view class="food_line"></view>
  <view class="food_content_image">
    <image class="canteen" src="{{canteen_icon}}" bindtap="canteen"></image>
    <image class="fruit" src="{{fruit_icon}}" bindtap="fruit"></image>
    <image class="food_delivery" src="{{food_delivery_icon}}" bindtap="food_delivery"></image>
  </view>
  <view class="food_content_text">
    <view class="canteen_text" bindtap="canteen">餐厅</view>
    <view class="fruit_text" bindtap="fruit">水果</view>
    <view class="food_delivery_text" bindtap="food_delivery">外卖架</view>
  </view>
</view>

<view class="study">
  <view class="study_top">
    <image class="study_icon" src="{{study_icon}}"></image>
    <view class="study_title">学习</view>
  </view>
  <view class="study_line"></view>
  <view class="study_content_image">
    <image class="teaching_building" src="{{teaching_building_icon}}" bindtap="teaching_building"></image>
    <image class="library" src="{{library_icon}}" bindtap="library"></image>
    <image class="lab_building" src="{{lab_building_icon}}" bindtap="lab_building"></image>
  </view>
  <view class="study_content_text">
    <view class="teaching_building_text" bindtap="teaching_building">教学楼</view>
    <view class="library_text" bindtap="library">图书馆</view>
    <view class="lab_building_text" bindtap="lab_building">实验楼</view>
  </view>
</view>

<view class="traffic">
  <view class="traffic_top">
    <image class="traffic_icon" src="{{traffic_icon}}"></image>
    <view class="traffic_title">出行</view>
  </view>
  <view class="traffic_line"></view>
  <view class="traffic_content_image">
